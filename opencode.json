{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "azure-anthropic": {
      "npm": "@ai-sdk/anthropic",
      "name": "Mortenson APIM Anthropic",
      "options": {
        "baseURL": "https://apim-dataapim-nonprod.azure-api.net/anthropic-api/v1",
        "apiKey": "{env:APIM_API_KEY}",
        "headers": {
          "Ocp-Apim-Subscription-Key": "{env:APIM_API_KEY}",
          "anthropic-version": "2023-06-01"
        }
      },
      "models": {
        "claude-4-sonnet": {
          "id": "claude-sonnet-4-20250514"
        },
        "claude-4-5-sonnet": {
          "id": "claude-sonnet-4-5@20250929"
        },
         "claude-4-5-opus": {
          "id": "claude-opus-4-5@20251101"
        },
         "claude-4-5-haiku": {
          "id": "claude-haiku-4-5@20251001"
        },
      }
 
    }
  },
   "mcp": {
    "shadcn": {
      "type": "local",
      "command": ["npx", "shadcn@latest", "mcp"],
      "enabled": true
    },
    "mastra": {
      "type": "local",
      "command": ["npx", "-y", "@mastra/mcp-docs-server"],
      "enabled": true
    },
    "microsoft-learn": {
      "type": "remote",
      "url": "https://learn.microsoft.com/api/mcp",
      "enabled": true
    }
  },
   "plugin": ["opencode-skills"]
}